{
  "manifest_version": 3,
  "name": "Steam Rep Counter",
  "version": "1.0.1",
  "description": "Just counts +rep and -rep in comments and shows on steam profile page",
  "author": "TNT CARDBOARD",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/id/*",
        "https://steamcommunity.com/profiles/*"
      ],
      "css": ["styles.css"],
      "js": [
        "reputation_patterns.js",
        "localization.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}